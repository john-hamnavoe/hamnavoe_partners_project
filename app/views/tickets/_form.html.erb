      </div>
      <div class="field">
        <%= form.label :ticket_type, class: "label" %>
        <%= form.text_field :ticket_type, class: "input input-sm", disabled: true %>
      </div>
      <div class="field">
        <%= form.label :ticket_priority, class: "label" %>
        <%= form.text_field :ticket_priority, class: "input input-sm", disabled: true %>
      </div>
      <div class="actions">
        <%= form.submit "Save", class: "btn btn-default" %>
